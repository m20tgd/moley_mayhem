3 DIM A$(2)4 DIM NN$(10)5 DIM NS(10)6 DIM X(6)7 DIM Y(6)8 DIM SEC(2)9 DIM HOLE(6)10 SCREEN 2 : TITLE "WHACK-A-MOLE"20 REM ~~~~~~~~~~~ TITLE SCREEN ~~~~~~~~~~~~~~~~~~25 BEGINFRAME30 CLS : RECT 0, 0, 2100, 1600, 231 RECT 250, 100, 1700, 1050, 832 LSET 10, 133 FRAME 250, 100, 1700, 1050, 435 FSET "Times New Roman", 20040 GPRINT "WHACK", 300, 400, 441 GPRINT "-A-", 900, 700, 442 RECT 1025, 1300, 1700, 1450, 843 GPRINT "MOLE", 1100, 1000, 445 FSET "Times New Roman", 10050 RECT 250, 1100, 1700, 1250, 851 RECT 250, 1300, 975, 1450, 860 FRAME 250, 1100, 1700, 1250, 461 FRAME 250, 1300, 975, 1450, 462 FRAME 1025, 1300, 1700, 1450, 470 GPRINT "START GAME", 650, 1200, 471 GPRINT "HIGH SCORES", 290, 1400, 472 GPRINT "EXIT", 1250, 1400, 475 ENDFRAME80 XX = 081 GOSUB 900082 IF A>250 AND A<1700 AND B>1100 AND B<1250 GOTO 10083 IF A>250 AND A<975 AND B>1300 AND B<1450 GOTO 1300084 IF A>1025 AND A<1700 AND B>1300 AND B<1450 GOTO 9990 GOTO 8099 END 100 REM ~~~~~~~~~~ DEFINE VARIABLES ~~~~~~~~~~~~~~101 X(1) = 500102 Y(1) = 350103 X(2) = 1000104 Y(2) = 350105 X(3) = 1500106 Y(3) = 350107 X(4) = 500108 Y(4) = 1100109 X(5) = 1000110 Y(5) = 1100111 X(6) = 1500112 Y(6) = 1100150 REM (((RADII)))151 HR = 200152 MR = 150200 REM (((SCORE)))210 SC = 0215 REM (((TIMES)))217 REM TIME MOLE APPEARS220 DLY = 1*60225 REM START TIME230 SEC(1) = TI235 REM END OF ROUND240 ET = 10*60250 REM (((NAME INPUT)))260 NAME$ = ""270 A$(1) = "_"280 A$(0) = ""1000 REM ~~~~~~~~~~~~~ MAIN PROGRAM ~~~~~~~~~~~~~1001 REM (((GOSUB CHOSE HOLE)))1003 IF DLY >= TI-SEC(2) GOTO 10101005 GOSUB 20001010 REM (((GOSUB DRAW SCREEN)))1015 GOSUB 30001020 REM (((GOSUB USER TAP)))1023 XX = 11025 GOSUB 90001027 XX = 01030 REM ((( GOSUB MOLE HIT )))1035 GOSUB 40001400 REM (((CHECK TIMER)))1405 GOSUB 80001500 GOTO 10002000 REM ~~~~~~~~~~ CHOSE HOLE ~~~~~~~~~~~~~~2100 REM HOW MANY HOLES2110 HN = INT(RND(0)*3+1)2500 FOR X = 1 TO HN2510 HOLE(X) = INT(RND(0)*6+1)2515 IF X=1 GOTO 25502520 FOR Y = 1 TO X-12530 IF HOLE(X) = HOLE(Y) GOTO 25102540 NEXT Y2550 NEXT X2800 REM RESET MOLE COUNTER2810 SEC(2) = TI 2900 RETURN3000 REM ~~~~~~~~~~ DRAW SCREEN ~~~~~~~~~~~~~~~3010 BEGINFRAME3015 CLS3020 RECT 0, 0, 2100, 1600, 23025 FSET "Times New Roman", 1003030 GPRINT "SCORE = " + STR$(SC), 700, 800, 43100 REM (((DRAW HOLES)))3110 FOR I = 1 TO 63120 CIRCLE X(I), Y(I), HR, 4, 13130 NEXT I3200 REM (((DRAW MOLES)))3205 FOR X = 1 TO HN3210 FOR I = 1 TO 63220 IF HOLE(X) = I THEN : CIRCLE X(I), Y(I), MR, 8, 13230 NEXT I3240 NEXT X3900 ENDFRAME3995 RETURN4000 REM ~~~~~~~~ MOLE HIT CALCULATOR ~~~~~~~~~~~~~4050 FOR I = 1 TO HN4100 IF SQR((A-X(HOLE(I)))^2 + (B-Y(HOLE(I)))^2) <=150 GOTO 43004110 NEXT I4115 RETURN4300 REM (((MOLE HIT)))4310 SC = SC + 14320 ALERT 54330 HOLE(I) = 04350 RETURN8000 REM ~~~~~~~~~ TIMER ~~~~~~~~~~~~~~~~~~~~~~~~8100 IF TI-SEC(1) >= ET THEN GOTO 100008200 RETURN9000 REM ~~~~~~~~~SUB READ USER TAP~~~~~~~~~~~~~~~~~~~~9010 DEF FN PK(A)=PEEK(A)+PEEK(A+1)*2569020 XT=10309030 YT=10329040 POKE 1024,09050 IF XX = 0 GOTO 90609055 IF DLY <= TI-(SEC(2)+20) THEN A=0 : GOTO 90909060 IF PEEK(1024) = 0 GOTO 90509070 A = FN PK(XT) : B = FN PK(YT)9090 RETURN 10000 REM ~~~~~~~~~~~~~~ END GAME ~~~~~~~~~~~~~~~~~~10004 REM ---CHECK FOR NEW HIGH SCORE---10005 GOSUB 1450010007 IF COUNT <= 10 GOTO 1002010010 REM ---DRAW SCORE SCREEN---10015 GOTO 1200010020 REM ---DRAW NEW HIGH SCORE---10025 GOSUB 1100010030 REM ---ENTER NAME SCREEN---10035 GOSUB 1150010040 REM ---UPDATE HIGH SCORES---10045 GOTO 1460011000 REM ~~~~~~~~~~DRAW NEW HIGH SCORE"~~~~~~~~~~~~~11007 BEGINFRAME11010 CLS 11015 FSET "Times New Roman", 10011018 RECT 0, 0, 2100, 1600, 211020 GPRINT "YOUR TIME IS UP!", 500, 600, 411025 GPRINT "NEW HIGH SCORE!!", 500, 700, 111030 GPRINT "YOUR SCORE IS " + STR$(SC), 500, 800, 411140 ENDFRAME11300 REM ((((((GET INPUT)))))11305 GOSUB 900011350 RETURN11500 REM ~~~~~~~~~~ENTER NAME~~~~~~~~~~~~11510 BEGINFRAME11520 CLS : RECT 0, 0, 2100, 1600, 211530 GPRINT "Please enter your name:", 500, 200, 411540 IF YY = 1 THEN YY = 0 : GOTO 1156011550 IF YY = 0 THEN YY = 111560 GPRINT NAME$ + A$(YY), 500, 300, 1 : GOTO 1159911570 YY = 011599 ENDFRAME11600 GET B$11610 IF B$ = "" GOTO 1150011620 IF B$ = CHR$(13) GOTO 1165011630 NAME$ = NAME$ + B$11640 GOTO 1150011650 RETURN12000 REM ~~~~~~~~~~SCORE SCREEN~~~~~~~~~~~~12007 BEGINFRAME12010 CLS 12015 FSET "Times New Roman", 10012018 RECT 0, 0, 2100, 1600, 212020 GPRINT "YOUR TIME IS UP!", 500, 600, 412030 GPRINT "YOUR SCORE IS " + STR$(SC), 500, 800, 412040 GPRINT "Would you like to play again?", 400, 1100,112050 FRAME 500, 1250, 900, 1450, 412060 FRAME 1100, 1250, 1500, 1450, 412070 GPRINT "YES", 600, 1400, 112080 GPRINT "NO", 1250, 1400, 112140 ENDFRAME12300 REM ((((((GET INPUT)))))12305 GOSUB 900012330 IF A>1100 AND A<1500 AND B>1250 AND B<1450 GOTO 1012340 IF A>500 AND A<900 AND B>1250 AND B<1450 GOTO 10012350 GOTO 1000713000 REM ~~~~~~~~~~HIGH SCORE SCREEN~~~~~~~~~~~~13005 GOSUB 1400013010 CLS : RECT 0, 0, 2100, 1600, 213020 FSET "Times New Roman", 20013030 GPRINT "HIGH SCORES", 375, 250, 413040 RECT 400, 300, 1600, 1350, 813050 FRAME 400, 300, 1600, 1350, 413100 FSET "Times New Roman", 10013110 FOR I = 1 TO 1013130 GPRINT PN$(I), 450, Z(I), 413140 GPRINT STR$(HS(I)), 1400, Z(I), 413150 NEXT I13200 FSET "Times New Roman", 8013210 GPRINT "Tap to continue", 700, 1450, 113400 SLEEP 100013500 GOSUB 900013600 GOTO 2014000 REM ~~~~~~~~~~~~~READ HIGH SCORES~~~~~~~~~~~~~~~14010 OPEN 1, 1, 0, "HighScores"14100 FOR I = 1 TO 1014110 INPUT#1, PN$(I), HS(I), Z(I)14120 NEXT I14150 CLOSE 114410 RETURN14500 REM ~~~~~~~~~~~~CHECK FOR NEW HIGH SCORE~~~~~~~~14501 GOSUB 1400014505 COUNT = 114510 FOR I = 1 TO 1014520 IF SC <= HS(I) THEN COUNT = COUNT + 114530 NEXT I14540 RETURN14600 REM ~~~~~~~~~~~~~~~UPDATE HIGH SCORES~~~~~~~~~~14700 REM ---REORDER SCORES---14701 NS(COUNT) = SC : NN$(COUNT) = NAME$14710 FOR I = COUNT TO 914715 NS(I+1) = HS(I)14716 NN$(I+1) = PN$(I)14720 NEXT I14730 FOR I = 0 TO COUNT-114735 NS(I) = HS(I)14737 NN$(I) = PN$(I)14740 NEXT I14750 REM SCREEN 1 : PRINT NS(COUNT) : PRINT NN$(COUNT)14760 REM END14800 REM ---SAVE SCORES---14801 OPEN 2,1,1, "HighScores"14810 FOR I = 1 TO 1014821 PRINT#2, NN$(I)14822 PRINT#2, NS(I)14823 PRINT#2, Z(I)14830 NEXT I14840 CLOSE 214999 GOTO 13000